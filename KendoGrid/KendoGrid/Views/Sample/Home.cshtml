@model KendoGrid.Models.ModelClass
 @using Kendo.Mvc.UI
@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>
@(Html.Kendo().Grid<KendoGrid.Models.ModelClass>()
            .Name("grid")
            .Columns(columns =>
            {
                columns.Bound(c => c.Id);
               
                columns.Bound(c => c.Name);
                columns.Bound(c => c.City);
               
            })
            .HtmlAttributes(new { style = "height: 550px;" })
            .Scrollable()
            .Groupable()
            .Sortable()
            .Pageable(pageable => pageable
                .Refresh(true)
                .PageSizes(true)
                .ButtonCount(5))
            .DataSource(dataSource => dataSource
                .Ajax()
                .Read(read => read.Action("Customers_Read", "Grid"))
                .PageSize(20)
            )
)
<style>
    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }
</style>

